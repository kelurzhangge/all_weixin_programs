/**index.wxss**/
.container {
  justify-content: flex-start;
  padding-top: 10rpx;
  padding-bottom: 0rpx;
  background-color: lightgray;
}
.board-container {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.mask {
  width: 100%;
  height: 160rpx;
}
.board {
  width: 100%;
  height: 1rpx;
  background-color: white;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.ground {
  width: 100%;
  height: 1rpx;
  flex-grow: 1;
  box-sizing: border-box;
  padding: 0rpx 0rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  align-content: flex-start;
}
.night-ground {
  /*background-color: gray;*/
}
.ground-title {
  width: 100%;
  text-align: center;
  padding: 10rpx 0;
  box-sizing: border-box;
  height: 80rpx;
}
.night-ground-title {
  /*background-color: gray;*/
  color: lightgray;
}
.wolf-ground {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 160rpx;
  /*padding-top: 160rpx;
  padding-bottom: 88rpx;*/
  box-sizing: border-box;
}
.player-stub {
  width: 156rpx;
  height: 160rpx;
  margin: 4rpx;
}
.player {
  width: 156rpx;
  height: 160rpx;
  margin: 4rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  position: relative;
}
.player-avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  /*border: 1px solid lightgray;*/
}
.player-name {
  width: 156rpx;
  font-size: 0.8em;
  white-space: nowrap;
  text-align: center;
  padding-top: 2rpx;
}
.night-player-name {
  color: lightgray;
}
.current-player-avatar {
  box-shadow: 0 0 4px 4px yellow;
  width: 68rpx;
  height: 68rpx;
  /*width: 108rpx;
  height: 108rpx;*/
  border: 0;
}
.current-marking-avatar {
  width: 96rpx;
  height: 96rpx;
}
.coming-player-avatar {
  opacity: 0.4;
}
.coming-player-name {
  color: lightgray;
}
.clawmark {
  width: 100%;
  height: 100%;
  position: absolute;
  top: -160rpx;
  left: 80rpx;
}
.storyboard {
  width: 100%;
  height: 88rpx;
  border-top: 1px solid lightgray;
  margin-top: 1px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  white-space: nowrap;
}
.time-logo {
  width: 60rpx;
  height: 60rpx;
  padding: 14rpx 14rpx 0 14rpx;
}
.sky {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  /*box-shadow: 0 0 2px 2px lightgray;*/
  overflow: hidden;
}
.day {
  width: 100%;
  height: 50%;
  background-color: deepskyblue;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.night {
  width: 100%;
  height: 50%;
  background-color: black;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.sky-view {
  width: 100rpx;
  height: 100rpx;
}
.history-view-container {
  position: absolute;
  top: 160rpx;
  bottom: 88rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.history-view {
  width: 88%;
  height: 88%;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: white;
  opacity: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.history-banner {
  width: 100%;
  height: 160rpx;
  background-color: deepskyblue;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.history-banner-dark {
  width: 100%;
  height: 160rpx;
  background-color: black;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.history-logo {
  width: 120rpx;
  height: 120rpx;
}
.history-content {
  flex-grow: 1;
  padding: 24rpx 24rpx;
}
.history-item {
  padding: 8rpx 0;
}
.view-shown {
  background-color: rgba(0,0,0,0.5);
}