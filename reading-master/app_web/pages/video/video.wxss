/* pages/video/video.wxss */
.video{
  background: #f5f5f5;
}
.video-header{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #63C150;
}
.video-header text{
  font-size: 30rpx;
  color:#fff;
}
.video-search{
  width:100%;
  height:70rpx;
  background: #63C150;
  padding: 10rpx;
  box-sizing: border-box;
}
.video-search button{
  width:100%;
  height:100%;
  line-height: 50rpx;
  text-align: center;
  
}
.video-search button icon{
  width: 15px;
  height:15px;
  display: inline-block;
  vertical-align: middle;
}
.video-search button text{
  display: inline-block;
  vertical-align: middle;
  font-size:28rpx;
  color:#B2B2B2;
  margin-left: 10rpx;
}
.video-container{
  padding: 15rpx;
  width:100%;
  background: #fff;
  margin-bottom: 30rpx;
}
.scroll-view_X{
  white-space: nowrap;
  margin-top: 20rpx;
}
.video-container .video-box{
  width:28%;
  height: 340rpx;
  display: inline-block;
  vertical-align: top;
  margin-left:16rpx;
  margin-right:16rpx;
  margin-bottom:50rpx;
}
.video-container-header{
  width:100%;
  height:60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color:#333;
  padding-left: 16rpx;
  font-weight:600;
  border-left: 10rpx solid #63C150;
}
.video-container .video-box text{
  display: block;
  width:100%;
  height:40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size:26rpx;
  color:#333;
}
.video-container .video-box image{
  width:100%;
  height:300rpx;
}