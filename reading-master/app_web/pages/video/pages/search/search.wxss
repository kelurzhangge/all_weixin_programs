/* pages/video/pages/search/search.wxss */
.search{
  height:100rpx;
  width:100%;
  background: #63C150;
  overflow: hidden;
}
.search .search-box{
  width: 90%;
  height:50rpx;
  margin: 0 auto;
  background: #fff;
  margin-top: 25rpx;
  overflow: hidden;
  border-radius:5px;
}
.search .search-box icon{
  width:30rpx;
  height:30rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
}
.search .search-box input{
  width:80%;
  height:100%;
  border:none;
  display:inline-block;
  vertical-align: middle; 
  margin-left: 10rpx;
  font-size:28rpx;
  color:#666;
}
.groom{
  width:100%;
}
.groom .groom-title{
  width:100%;
  height:70rpx;
  background: #F0F3F5;
  font-size:26rpx;
  color:#666;
  line-height: 70rpx;
  padding-left: 20rpx;
}
.groom .groom-video{
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  background: #fff;
  font-size:28rpx;
  color:#333;
  border-bottom:1px solid #e2e2e2;
  padding-left: 20rpx;
  padding-right:20rpx;
  box-sizing: border-box;
}
.result{
  width: 100%;
}
.result .result-box{
  width: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  border-bottom:1px solid #e2e2e2;
  height:170rpx;
  margin-top: 20rpx;
}
.result .result-box .result-box-cover{
  display: inline-block;
  vertical-align: top;
  width: 100rpx;
  height:140rpx;
}
.result .result-box .result-box-cover image{
  width:100%;
  height:100%;
}
.result .result-box .result-box-info{
  display: inline-block;
  vertical-align: top;
  width: 400rpx;
  height: 100%;
  margin-left: 30rpx;
}
.result .result-box .result-box-info text{
  display: block;
  width: 100%;
  height:70rpx;
  line-height: 70rpx;
}