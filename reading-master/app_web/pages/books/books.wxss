/* pages/books/books.wxss */
.header{
  width:100%;
  height: 100rpx;
  background: #fff;
  border-bottom:8rpx solid #F1F1F1;
  overflow: hidden;
}
.header .header-tab{
  display: inline-block;
  vertical-align: top;
  width:350rpx;
  height:100%;
}
.header .header-tab .header-tab-btn{
  line-height: 100rpx;
  font-size: 30rpx;
  color:#333;
  display: inline-block;
  vertical-align: top;
  width: 100rpx;
  height:100rpx;
  text-align: center;
}
.header .search{
  width: 30rpx;
  height:30rpx;
  margin-top: 35rpx;
  display: inline-block;
  vertical-align: top;
  float: right;
  margin-right: 60rpx;
}
.header .search icon{
  width: 100rpx;
  height:100rpx;
}
.main{
  width:100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  border-top:transparent;
}
.main .title{
  display: block;
  width: 100%;
  height:120rpx;
  line-height: 120rpx;
  text-align: left;
  font-size: 36rpx;
  font-weight:500;
  margin-top:40rpx; 
}
.wrap-container{
  width:100%;
}
.wrap-container .wrap-box{
  width: 100%;
  height:300rpx;
  overflow: hidden;
  border-radius:10rpx;
  position: relative;
}
.wrap-container .wrap-box .wrap{
  width: 100%;
  height:100%;
  background: rgba(0,0,0,0.8);
  position: absolute;
  top:0;
  left: 0;
}
.wrap-container .wrap-box .wrap .wrap-text{
  display: inline-block;
  vertical-align: top;
  width: 70%;
}
.wrap-container .wrap-box .wrap .wrap-text .wrap-text-row{
  display: block;
  width: 100%;
  height:100rpx;
  line-height: 100rpx;
  text-align: left;
  padding-left:40rpx;
  color:#fff;
  font-size:32rpx;
}
.wrap-container .wrap-box .wrap .wrap-text .wrap-text-row .wrap-text-box{
  display: inline-block;
  vertical-align: top;
  width: 30rpx;
}
.wrap-container .wrap-box .wrap .wrap-img{
  display: inline-block;
  vertical-align: top;
  width:28%;
  position: relative;
  margin-top: 20rpx;
}
.wrap-container .wrap-box .wrap .wrap-img image{
  display: block;
  width:100%;
  height:260rpx;
  position: absolute;
  top:0;
  left:0;
}
.wrap-container .wrap-box .wrap-bg{
  position: absolute;
  top:-220rpx;
  left:0;
  width: 100%;
  height:700rpx;
}
scroll-view{
  white-space: nowrap;
  border-bottom:1px solid #e2e2e2;
  padding-bottom: 30rpx;
}
scroll-view .books{
  display: inline-block;
  vertical-align: top;
  width: 180rpx;
  height:100%;
  margin-left: 40rpx;
}
scroll-view .books .books-cover{
  width:100%;
  height:240rpx;
}
scroll-view .books .books-cover image{
  width:100%;
  height:100%;
}
scroll-view .books text{
  width:100%;
  white-space: normal;
  word-break: break-all;
  line-height: 30rpx;
  display: block;
  margin-top: 10rpx;
  text-align: center;
}
.wrap-bottom{
  margin-top:50rpx; 
}