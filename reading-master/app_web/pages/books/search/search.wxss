/* pages/books/search/search.wxss */
.search{
  width: 100%;
  height:60rpx;
  border-bottom: 1px solid #e2e2e2;
  padding-top: 40rpx;
  padding-bottom: 10rpx;
  box-sizing: content-box;
}
.search icon{
  width: 40rpx;
  height:40rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 30rpx;
}
.search input{
  width: 540rpx;
  height:100%;
  line-height: 60rpx;
  color:#333;
  display: inline-block;
  vertical-align: top;
  font-size:30rpx;
  margin-left: 30rpx;
}
.search text{
  display: inline-block;
  vertical-align: top;
  width:100rpx;
  height:100%;
  line-height: 60rpx;
  font-size: 32rpx;
}
.hotsearch{
  width: 100%;
  height:100rpx;
  line-height: 100rpx;
  font-size:32rpx;
  font-weight: 500;
  padding-left: 30rpx;
  color:#000;
}
.groom{
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.groom .groom-item{
  width: 100%;
  height:240rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  box-sizing: content-box;
  border-bottom: 1px solid #e2e2e2;
}
.groom .groom-item .groom-cover{
  width: 160rpx;
  height:240rpx;
  display: inline-block;
  vertical-align: top;
}
.groom .groom-item .groom-cover image{
  width:100%;
  height:100%;
}
.groom .groom-item .groom-info{
  width:440rpx;
  height:240rpx;
  margin-left: 30rpx;
  display: inline-block;
  vertical-align: top;
}
.groom .groom-item .groom-info .groom-title{
  width: 100%;
  height:70rpx;
  line-height: 70rpx;
  font-size:36rpx;
  color:#000;
  font-weight: 600;
}
.groom .groom-item .groom-info .groom-author{
  width: 100%;
  height:40rpx;
  line-height: 40rpx;
  font-size:24rpx;
  color:#666;
}
.groom .groom-item .groom-info .groom-des{
  width: 100%;
  height:120rpx;
  line-height: 40rpx;
  font-size:28rpx;
  color:#333;
  overflow: hidden;
}