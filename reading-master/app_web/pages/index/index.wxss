/**index.wxss**/
.usercard{
  width:100%;
  height:300rpx;
  display: block;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname {
  color: #fff;
  font-size:20px;
  font-weight:600;
  line-height:50px;
}

.main{
  width:100%;
  height: 800rpx;
  padding:0;
  margin-top:0;
  background: #f5f5f5;
}
.main .btn{
  width:30%;
  height:200rpx;
   background:#fff; 
  box-shadow: 3px 3px 3px 3px #e2e2e2;
  display: inline-block;
  border-radius:20rpx;
  overflow:hidden;
  vertical-align: top;
  margin-left: 18rpx;
  margin-top: 18rpx;
  padding-top:50rpx;
}
.main .btn:active{
  background: #f5f5f5;
  box-shadow: 3px 3px 3px 3px #e2e2e2;
}
.main .btn:active text{
  color:#FF4101;
}
.main .btn .btn-icon{
  width:50%;
  height:50%;
  display: block;
  margin: 0 auto;
}
.main .btn .btn-icon image{
  width:100%;
  height:100%;
}
.main .btn text{
  display: block;
  width:100%;
  text-align: center;
  font-size:30rpx;
}